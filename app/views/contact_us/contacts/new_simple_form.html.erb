<div class="wrapper_cf">
  <div id="content">
    <h2><%= t('.contact_us') %></h2>
    <%= simple_form_for @contact, :url => contacts_path do |f| %>
      <p>
        <%= f.input :name, :label => t('.name'),:class=>"iconic user" if ContactUs.require_name %>
      </p>

      <p>
       <%= f.input :email, :label => t('.email'),:class=>"iconic mail-alt" %>
      </p>

      <p>
       <%= f.input :subject, :label => t('.subject'), :name => "selection" if ContactUs.require_subject %>
      </p>

      <p>
       <%= f.input :message, :as => :text, :label => t('.message'), :class=>"iconic comment" %>
      </p>

      <p>
       <%= f.button :submit, :value => t('.submit'), :alt => t('.submit'), :id => 'contact_us_contact_submit', :title => t('.submit') %>
      </p>
    <% end %>

  </div>

